#blog-main-area
  = simple_form_for @blog, url: {action: :update}, html: {role: 'form'}, remote: true do |f|
    = f.hidden_field :user_id, value: @blog.user_id
    = f.input :title
    = f.input :contents, input_html: {rows: "15"}
    = f.button :submit, "Save", class: "btn btn-default"
    = f.button :submit, "Save & Publish", class: "btn btn-success"
